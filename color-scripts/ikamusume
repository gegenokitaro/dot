#!/bin/bash

wm=$( wmctrl -m | grep -i name | sed s/'Name: '//g )
gtkrc="$HOME/.gtkrc-2.0"
GtkTheme=$( grep "gtk-theme-name" "$gtkrc" | cut -d\" -f2 )
GtkIcon=$( grep "gtk-icon-theme-name" "$gtkrc" | cut -d\" -f2 )
GtkFont=$( grep "gtk-font-name" "$gtkrc" | cut -d\" -f2 )
Gnome=$( gsettings get org.gnome.shell.extensions.user-theme name | sed s/\'//g )
OS=$( cat /etc/*-release | grep NAME= | sed -n 1p | cut -d'=' -d'"' -f2 )


initializeColor() {
  esc=""

  blackf="${esc}[30m";   redf="${esc}[31m";    greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
  cyanf="${esc}[36m";    whitef="${esc}[37m"
  
  blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
  yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
  cyanb="${esc}[46m";    whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}

initializeColor


cat << EOF 
${bluef}             â–’          â–’â–’â–’â–’â–’â–‘â–‘â–‘â–‘â–‘â–‘â–’â–’â–’â–’â–’       â–’â–’                ${reset}
${bluef}           â–’â–‘      â–’â–’â–’â–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–’â–’â–’    â–’â–’          ${reset}
${bluef}         â–’â–‘â–’  â–’â–’â–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–’â–’â–’ â–’â–‘â–’         ${reset}
${bluef}        â–’â–‘â–’â–’â–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–’â–’â–‘â–‘â–’        ${reset}
${bluef}        â–’â–‘â–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–’â–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–’â–’â–‘â–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–’â–’â–’       ${reset} ${bluef}OS${reset}   $OS
${bluef}       â–’â–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–’â–’â–’â–’â–ˆâ–ˆâ–ˆâ–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–ˆâ–ˆâ–ˆâ–’â–’â–ˆâ–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘      ${reset} ${bluef}DE${reset}   $wm
${bluef}      â–â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–’â–ˆâ–ˆâ–ˆâ–ˆâ–Œ â–ˆâ–ˆâ–’â–‘â–‘â–‘â–‘â–‘â–‘â–’â–ˆâ–ˆâ–Œâ–â–ˆâ–’â–ˆâ–ˆâ–ˆâ–’â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–’    ${reset} ${bluef}  ${reset}   $Gnome
${bluef}        â–ˆâ–‘â–‘â–‘â–‘â–‘â–‘â–‘â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ   â–â–ˆâ–ˆâ–’â–‘â–‘â–‘â–’â–ˆâ–ˆ   â–â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–‘â–‘â–‘â–‘â–‘â–‘â–ˆâ–’â–’â–‘   ${reset} ${bluef}GTK${reset}  $GtkTheme [GTK2]
${bluef}        â–â–’â–‘â–‘â–‘â–‘â–‘â–’â–’â–ˆâ–ˆâ–Œ â–‘â–‘     â–â–ˆâ–ˆâ–’â–ˆâ–ˆâ–Œ     â–â–Œ â–â–ˆâ–ˆâ–ˆâ–’â–’â–‘â–‘â–‘â–’â–ˆâ–Œ     ${reset} ${bluef}   ${reset}  $GtkTheme [GTK3]
${bluef}         â–ˆâ–’â–‘â–‘â–’â–ˆâ–ˆâ–ˆâ–ˆâ–Œ________   â–â–ˆâ–Œ  _________â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–‘â–‘â–ˆâ–ˆ      ${reset} ${bluef}Font${reset} $GtkFont
${bluef}        â–‘â–ˆâ–ˆâ–’â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆ   â–â–ˆâ–ˆâ–ˆâ–ˆâ–Œ         â–â–ˆâ–ˆâ–ˆâ–ˆâ–Œ  â–â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–ˆâ–Œ      ${reset}
${bluef}          â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–Œ     â–ˆâ–ˆâ–ˆâ–ˆâ–Œ         â–â–ˆâ–ˆâ–ˆâ–ˆ    â–â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ       ${reset}
${bluef}          â–’â–ˆâ–ˆâ–ˆâ–ˆâ–Œâ–      â–€â–€â–€           â–€â–€â–€    â–‘â–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–Œ       ${reset}
${bluef}         â–’â–’â–ˆâ–ˆâ–ˆâ–’â–‘â–                           â–â–‘â–‘â–‘â–ˆâ–ˆâ–’â–Œ        ${reset}
${bluef}        â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–‘â–â–                          â–â–‘â–‘â–‘â–ˆâ–ˆâ–ˆâ–’â–Œ       ${reset}
${bluef}      â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–‘â–‘â–â–„        _________      â–„â–ˆâ–’â–‘â–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–Œ     ${reset} ${bluef} ~degeso ${reset}
${bluef}    â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–‘â–‘â–‘â–ˆâ–ˆâ–„â–„_               __â–„â–ˆâ–ˆâ–ˆâ–’â–‘â–‘â–‘â–’â–ˆâ–ˆâ–’â–ˆâ–ˆâ–ˆâ–’â–’â–Œ  ${reset}
${bluef}  â–’â–ˆâ–ˆâ–ˆâ–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–‘â–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„          â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–‘â–‘â–‘â–’â–’â–ˆâ–ˆâ–’â–’â–’â–ˆâ–ˆâ–’â–’ ${reset}
${bluef} â–‘â–ˆâ–ˆâ–ˆâ–’â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–‘â–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–’â–’â–’â–’â–’â–’â–’â–’â–’â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–’â–’â–’â–‘â–’â–ˆâ–ˆâ–ˆâ–ˆâ–’â–’â–’â–ˆâ–ˆâ–ˆâ–Œ${reset}
